<section class="auth-layout">
  <div class="auth-card">
    <h1>Create an account</h1>
    <p class="auth-subtitle">
      Create your account. Your password will be stored securely.
    </p>

    {{#if error}}
      <div class="alert alert-error">{{error}}</div>
    {{/if}}

    <form action="/register" method="POST" class="form-card">
      <div class="form-group">
        <label for="username">Username (used for login)</label>
        <input id="username" name="username" type="text" required>
      </div>

      <div class="form-group">
        <label for="displayName">Display name (shown publicly)</label>
        <input id="displayName" name="displayName" type="text" required>
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" required>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" required>
      </div>

      <button type="submit" class="btn btn-primary btn-full">Sign up</button>
    </form>

    <p class="auth-footer">
      Already have an account? <a href="/login">Log in</a>
    </p>
  </div>
</section>
